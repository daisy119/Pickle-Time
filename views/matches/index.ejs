<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/matches/index.css" />
<%- include('../partials/nav') %>
<main>
<section>
  <h1>Upcoming Matches 👟👟👟</h1>
  <h2>All the pickles 🥒🏐!</h2>

  <table id="list">
    <thead>
      <tr>
        <th>Match Date:</th>
        <th>Opponent:</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% matches.forEach((match) => { %>
      <tr>
        <td><%= match.date.toLocaleDateString('en-US', {dataStyle : 'short'})%> <%=match.date.toLocaleString('en-US', {dataStyle : 'short', timeStyle:'short'})%></td>
        <td><%= match.friends %></td>
        <td><a href="/matches/<%= match._id %>">🔎</a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
</main>
<%- include('../partials/footer') %>