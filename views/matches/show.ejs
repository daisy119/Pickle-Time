<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/matches/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>From the match schedule of <%= match.owner.name %></p>
  <section>
    <div>Match Date: </div>
    <div>
      <%= match.date %>
    </div>
    <div>Match Duration Hour: </div>
    <div><%= match.durationHr%></div>
    <div>Fav Court: </div>
    <div><%= match.fav %></div>
    <div>Match Opponent: </div>
    <div><%= match.friends %></div>

    <div>Match Court:</div>
    <ul>
      <% match.courts.forEach(court => { %>
        <li><%= court.name %></li>
      <% }) %>
    </ul>


    <% if (user) { %>

      <form id="add-per-to-cast" action="/matches/<%= match._id %>/courts" method="POST">
        <select name="courtId">
          <% courts.forEach(court => { %>
            <option value="<%= court._id %>"><%= court.name %></option>
          <% }) %>
        </select>
        <button type="submit">Add a Court</button>
      </form><br>

      <form 
        action="/matches/<%= match._id %>/flipFav?_method=PATCH" 
        method="POST"
      >
        <button class="btn-show" type="submit">
          Make this court <%= match.fav ? 'not a fav💔':'a fav💚✨'  %>
        </button>
      </form>

      <% if (match.owner.equals(user?.profile._id)) { %>
        <a href="/matches/<%= match._id %>/edit">
          <button class="btn-show">Edit this Match ✍️</button>
        </a>

        <form action="/matches/<%= match._id %>?_method=DELETE" method="POST">
          <button class="btn-show" type="submit">Delete this match ✂️</button>
        </form>
      <% } %>
    

  </section>

  <h2>Reviews</h2>
  <form 
    id="add-review-form"
    action="/matches/<%= match._id %>/comments"
    method="POST"
  >
    <label for="content-textarea">Comment:</label>
    <textarea name="content" id="content-textarea"></textarea>
    <label for="rating-select">Rating:</label>
    <select name="rating" id="rating-select">
      <option value="1">🌟</option>
      <option value="2">🌟🌟</option>
      <option value="3" selected>🌟🌟🌟</option>
      <option value="4">🌟🌟🌟🌟</option>
      <option value="5" >🌟🌟🌟🌟🌟</option>
    </select>
    <button type="submit">Add Comment</button>
  </form>
  <% } %>

</main>
  
<%- include('../partials/footer') %>